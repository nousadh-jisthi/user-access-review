<%- include('../partials/top.ejs') %>
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
</head>
<body>
    <%- include('../partials/nav.ejs', {name: email, isAdmin: true}) %>
    <header id="audit" data-audit-id="<%= audit.id %>">
        <h1>User Access Review - Audit <%= audit.id %></h1>
    </header>
    <main>       
        <div class="content">
            <div id="userDetails">
                <div id="userInfo">
                    <div class="card">
                        <div class="card-header">
                            Audit Details
                        </div>
                        <div class="card-body">
                            <!-- List name, and other audit information -->
                            <div id="auditInfo">
                                <div id="auditName">
                                    <p id="auditNameText"><b>Audit Name:</b> <%= audit.auditName %></p>
                                </div>
                                <div id="auditDescription">
                                    <p id="auditDescriptionText"><b>Audit Description:</b><%= audit.auditDescription %></p>
                                </div>
                                <div id="auditStartDate">
                                    <p id="auditStartDateText"><b>Audit Start Date: </b><%= audit.auditStartDate %></p>
                                </div>
                                <div id="auditCollectedAt">
                                    <p id="auditStatusText"><b>Audit Collected at : </b><%= audit.collected_at %></p>
                                </div>
                                <div id="auditCompletedAt">
                                    <p id="auditStatusText"><b>Audit Completed at : </b><%= audit.completed_at %></p>
                                </div>
                            </div>
                        </div>
                    </div>  
                </div>
            </div>
            </br>
            <div>
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        Managers
                    </div>
                    <div class="card-body">
                        <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Manager/Reviewer</th>
                                    <th>Review Progress</th>
                                    <th>Completion Status</th>
                                </tr>
                            </thead>

                            <tbody id="managersList">
                        
                            </tbody>
                        </table>
                    </div>
                </div>
                <button id="exportReportButton">Export Report</button>
            </div>
            </br>
            <div>
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        Employees without managers
                    </div>
                    <div class="card-body">
                        <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Dn</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Set Reviewer</th>
                                </tr>
                            </thead>

                            <tbody id="employeesWithoutManagerList">
                        
                            </tbody>
                        </table>
                    </div>
                </div>
                <button id="saveChangesButton">Save Changes</button>
            </div>
        </div>
    </main>
    <script src="/js/audit-details.js"></script>
</body>
</html>